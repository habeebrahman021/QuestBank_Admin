<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMaterialActivity"
    android:padding="40dp"
    android:gravity="center">

    <Spinner
        android:id="@+id/spin_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/class_arr"
        style="@style/Widget.AppCompat.Spinner.Underlined"/>
    <Spinner
        android:id="@+id/spin_board"
        android:layout_below="@+id/spin_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:entries="@array/board_arr"
        style="@style/Widget.AppCompat.Spinner.Underlined"/>
    <Spinner
        android:id="@+id/spin_medium"
        android:layout_below="@+id/spin_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:entries="@array/medium_arr"
        style="@style/Widget.AppCompat.Spinner.Underlined"/>
    <Spinner
        android:id="@+id/spin_subject"
        android:layout_below="@+id/spin_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:entries="@array/subject_arr"
        style="@style/Widget.AppCompat.Spinner.Underlined"/>

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spin_subject"
        android:layout_marginTop="10dp"
        android:text="Upload Files"/>

    <TextView
        android:id="@+id/txt_status"
        android:layout_below="@+id/btn_upload"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>